<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <!--log4net块配置节点-->
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <appSettings>
    <add key="Urls" value="http://127.0.0.1:8888/service/,http://127.0.0.1:8888/service2/"/>
    <add key="FileDir" value=""/>
    <add key="UploadApi" value=""/>
  </appSettings>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>

  <log4net>
    <root>
      <level value="ALL" />
      <!--根据log级别记录到不同的日志文件-->
      <appender-ref ref="ErrorLog" />
      <appender-ref ref="InfoLog" />
    </root>
    <appender name="ConsoleLog" type="log4net.Appender.ConsoleAppender,log4net">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="ErrorLog" type="log4net.Appender.RollingFileAppender,log4net">
      <file value="Log\\Error\\" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1024KB" />
      <rollingStyle value="Date" />
      <staticLogFileName value="false" />
      <datePattern value="yyyy-MM-dd&quot;_log.txt&quot;" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    <appender name="InfoLog" type="log4net.Appender.RollingFileAppender,log4net">
      <file value="Log\\Info\\" />
      <appendToFile value="true" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="1024KB" />
      <rollingStyle value="Date" />
      <staticLogFileName value="false" />
      <datePattern value="yyyy-MM-dd&quot;_log.txt&quot;" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="WARN" />
      </filter>
    </appender>
  </log4net>
</configuration>